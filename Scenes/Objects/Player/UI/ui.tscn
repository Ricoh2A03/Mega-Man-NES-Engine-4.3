[sub_resource type="GDScript" id="GDScript_sr7th"]
script/source = "extends CanvasLayer
class_name PlayerUI

@onready var menu_player := $WeaponMenu/AnimationPlayer
@onready var energy_bars := $EnergyBars

@export var _is_animating: bool = false
@export var _is_opened: bool = false

@export var player: Player

func _ready() -> void:
	menu_player.play(\"slide_bars\")

func _process(_delta: float) -> void:
	if player:
		if !_is_animating and (player.state != player.STATES.SCROLL and player.state != player.STATES.DEAD and player.state != player.STATES.HURT) \\
			and Input.is_action_just_pressed(\"weapon_menu\"):
			if !_is_opened:
				open_weapon_menu(true)
			else:
				open_weapon_menu(false)

func open_weapon_menu(open: bool) -> void:
	if open:
		player.menu_opened(true)
		#get_tree().call_group(\"Player\", \"menu_opened\", true)
		menu_player.play(\"menu_open\")
	elif !open:
		player.menu_opened(false)
		#get_tree().call_group(\"Player\", \"menu_opened\", false)
		menu_player.play(\"menu_close\")

func add_item(item: InventoryItem):
	pass

func toggle_energy_bars(on: bool) -> void:
	if on: energy_bars.visible = true
	else: energy_bars.visible = false
"

